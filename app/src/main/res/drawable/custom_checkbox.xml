<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">

                    <corners android:radius="5dp"/> <!-- 모서리 둥글게 설정 -->
                </shape>
            </item>
            <!-- Check mark (if needed)-->
            // <item android:drawable="@drawable/checkbox" android:gravity="center"/>
        </layer-list>
    </item>

    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">

                    <corners android:radius="5dp"/> <!-- 모서리 둥글게 설정 -->
                </shape>
            </item>
            <!-- Check mark (if needed)-->
            <item android:drawable="@drawable/checkbox_background" android:gravity="center"/>
        </layer-list>
    </item>
</selector>
