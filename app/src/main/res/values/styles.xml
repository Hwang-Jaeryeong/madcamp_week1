<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/tab_color</item>
    </style>

    <style name="Theme.YourApp.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/tab_color</item>
    </style>

    <style name="CustomTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/hel</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>



</resources>