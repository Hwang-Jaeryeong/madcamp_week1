<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Text Appearance for Calendar Dates -->
    <style name="CustomCalendarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <!-- Add other text attributes like size, style, etc., if needed -->
    </style>

    <style name="CustomDayLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <!-- You can also customize the text size, style, etc. -->
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <!-- Customize the text size, style, etc., if desired -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom Dialog Style -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customizations for the dialog -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/bright_green</item>
    </style>

</resources>